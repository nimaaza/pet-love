<div class="banner">
  <div class="container">
    <h1>Pet   Love</h1>
    <p>Keeping our furry friends safe & warm</p>
    <%= link_to 'Book a Home', places_path, class: 'btn btn-flat' %>
  </div>
</div>

<div class="container">
  <div style="width: 60%; margin: auto;" >
    <form action="/places" method="get" class="m-5">
      <div style="position: relative; height: 60px;">
        <input style="position: absolute;" class="form-control" type="text" name="query" placeholder="Search for host, full address...">
        <input style="position: absolute; width: 20%; right: 0;" class="form-control form-btn" type="submit" value="Search">
      </div>
    </form>
  </div>
</div>

<div id="container-home" align="center">
  <h1 class="m-5">Some of our fur-balls' favorite picks 😍 💛</h1>

  <div class="row">
    <% @sample_places1.each do |place| %>
      <div class="col-sm-12 col-md-6 col-lg-3">
        <%= render 'shared/card', place: place %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= render 'shared/card', place: @sample_places2 %>
    </div>
  </div>

    <div class="row">
    <% @sample_places3.each do |place| %>
      <div class="col-sm-12 col-md-6 col-lg-6">
        <%= render 'shared/card', place: place %>
      </div>
    <% end %>
  </div>

  <%= link_to 'See all our places', places_path, class: 'btn btn-flat' %>
</div>

