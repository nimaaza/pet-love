<div class="container">

  <form action="/places" method="get">
    <input type="text" name="query" placeholder="Search for host, full address...">
    <input type="submit" value="Search">
  </form>

  <div class="row">
    <% @places.each do |place| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <%= render 'shared/card', place: place %>
      </div>
    <% end %>
  </div>
</div>
