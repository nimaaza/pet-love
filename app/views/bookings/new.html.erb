
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Book <strong><%= @place.title %></strong> for your pet</h1>
      <h2>hosted by: <strong>
        <%= @place.user.first_name.capitalize %>
        <%= @place.user.last_name.capitalize %>
      </strong>
      <i class="fas fa-heart host"></i>
    </h2>

      <%= simple_form_for @booking do |f| %>
        <%= f.input :pet_description %>
        <%= f.input :species %>
        <%= f.input :pet_photo_url %>
        <%= f.input :booking_start_date, as: :date %>
        <%= f.input :booking_end_date, as: :date %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
